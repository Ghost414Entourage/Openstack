# Step 1: Create VM with nested virtualization
gcloud compute instances create instance-20250925-205850 \
  --project=steam-current-470801-g4 \
  --zone=us-central1-f \
  --machine-type=n2-highcpu-4 \
  --enable-nested-virtualization \
  --network-interface=network-tier=PREMIUM,stack-type=IPV4_ONLY,subnet=default \
  --metadata=enable-osconfig=TRUE \
  --maintenance-policy=MIGRATE \
  --provisioning-model=STANDARD \
  --service-account=496035719700-compute@developer.gserviceaccount.com \
  --scopes=https://www.googleapis.com/auth/devstorage.read_only,https://www.googleapis.com/auth/logging.write,https://www.googleapis.com/auth/monitoring.write,https://www.googleapis.com/auth/service.management.readonly,https://www.googleapis.com/auth/servicecontrol,https://www.googleapis.com/auth/trace.append \
  --enable-display-device \
  --tags=http-server,https-server \
  --create-disk=auto-delete=yes,boot=yes,device-name=instance-20250925-205850,image=projects/ubuntu-os-cloud/global/images/ubuntu-minimal-2404-noble-amd64-v20250923a,mode=rw,size=50,type=pd-balanced \
  --no-shielded-secure-boot \
  --shielded-vtpm \
  --shielded-integrity-monitoring \
  --labels=goog-ops-agent-policy=v2-x86-template-1-4-0,goog-ec-src=vm_add-gcloud \
  --reservation-affinity=any

# Step 2: Create Ops Agent config file
printf 'agentsRule:\n  packageState: installed\n  version: latest\ninstanceFilter:\n  inclusionLabels:\n  - labels:\n      goog-ops-agent-policy: v2-x86-template-1-4-0\n' > config.yaml

# Step 3: Create Ops Agent policy
gcloud compute instances ops-agents policies create goog-ops-agent-v2-x86-template-1-4-0-us-central1-f \
  --project=steam-current-470801-g4 \
  --zone=us-central1-f \
  --file=config.yaml















# Step 1: Create VM with nested virtualization
gcloud compute instances create instance-20250925-205850 \
  --project=steam-current-470801-g4 \
  --zone=us-central1-f \
  --machine-type=n2-highcpu-4 \
  --enable-nested-virtualization \
  --network-interface=network-tier=PREMIUM,stack-type=IPV4_ONLY,subnet=default \
  --metadata=enable-osconfig=TRUE \
  --maintenance-policy=MIGRATE \
  --provisioning-model=STANDARD \
  --service-account=496035719700-compute@developer.gserviceaccount.com \
  --scopes=https://www.googleapis.com/auth/devstorage.read_only,https://www.googleapis.com/auth/logging.write,https://www.googleapis.com/auth/monitoring.write,https://www.googleapis.com/auth/service.management.readonly,https://www.googleapis.com/auth/servicecontrol,https://www.googleapis.com/auth/trace.append \
  --enable-display-device \
  --tags=http-server,https-server \
  --create-disk=auto-delete=yes,boot=yes,device-name=instance-20250925-205850,image=projects/ubuntu-os-cloud/global/images/ubuntu-2204-jammy-v20250924,mode=rw,size=50,type=pd-balanced \
  --no-shielded-secure-boot \
  --shielded-vtpm \
  --shielded-integrity-monitoring \
  --labels=goog-ops-agent-policy=v2-x86-template-1-4-0,goog-ec-src=vm_add-gcloud \
  --reservation-affinity=any

# Step 2: Create Ops Agent config file
printf 'agentsRule:\n  packageState: installed\n  version: latest\ninstanceFilter:\n  inclusionLabels:\n  - labels:\n      goog-ops-agent-policy: v2-x86-template-1-4-0\n' > config.yaml

# Step 3: Create Ops Agent policy
gcloud compute instances ops-agents policies create goog-ops-agent-v2-x86-template-1-4-0-us-central1-f \
  --project=steam-current-470801-g4 \
  --zone=us-central1-f \
  --file=config.yaml




